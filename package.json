{
  "name": "sims-setup-test",
  "version": "1.0.0",
  "main": "index.js",
  "author": "eltneg",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4"
  },
  "scripts": {
    "lint": "yarn run eslint --fix",
    "eslint": "npx eslint ./src",
    "build": "yarn run clean && babel ./src -d build --ignore src/tests",
    "clean": "rm -rf build",
    "dev-start": "cross-env NODE_ENV=DEVELOPMENT nodemon --exec npx babel-node --presets=env ./src/index.js",
    "prod-start": "cross-env NODE_ENV=PRODUCTION node ./build/index.js",
    "start": "yarn run build && npm run prod-start",
    "test": "yarn run eslint && cross-env NODE_ENV=TEST  mocha ./src/tests --timeout 15000 --require babel-polyfill --require babel-register --exit"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0"
  }
}
